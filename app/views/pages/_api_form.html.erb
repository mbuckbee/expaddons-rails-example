	<div class='row' id="<%= api['slug'] + '_form' %>">

		<div class='col-xs-offset-1 col-xs-10' >

			<div class="panel panel-default">
				<div class="panel-heading">

					<div class='row'>

						<div class='col-xs-2' >
							<img src="https://www.expeditedaddons.com/<%= api['slug'] %>.png" class='logo'>
						</div>

						<div class='col-xs-8'>
							<h3><%= api['name'] %></h3>
							<p class=''><%= api['tagline'] %></p>				
							<div class="btn-group btn-group-xs">
								<a class="btn btn-default" href='https://github.com/mbuckbee/<%= api['name'].gsub(" ","-") %>-Gem'><i class='fa fa-github-alt'></i> Gem Docs</a>
								<a class="btn btn-default" href='http://doc.<%= api['slug'] %>exp.apiary.io'><i class='fa fa-code'></i> API Explorer</a>
								<!--
								# Not Live until Beta
								<a class="btn btn-default" href='https://devcenter.heroku.com/articles/expeditedssl/<%= api['slug'] %>'><i class='fa fa-file-text'></i> Heroku Docs</a>
								-->
							</div>							
						</div>


					</div>	

				</div>			

				<div class='panel-body' >


					<% api['input_fields'] %>

					<%= simple_form_for api['slug'].to_sym, url: '/fetch/' + api['slug'], method: :get  do |f| %>

						<% api['input_fields'].each do |api_f| %>

							<%= f.input api_f[0].to_sym, as: api_f[2], placeholder: api_f[4] + ' Ex: ' + api_f[3] %>

						<% end %>

						<%= f.button :submit, " Submit ", class: 'btn btn-primary pull-right' %>

					<% end %>


				</div>

			</div>

		</div>


	</div>